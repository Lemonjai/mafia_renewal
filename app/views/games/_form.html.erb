<%= form_for @game do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being created:</h2>
      <ul>
	      <% @product.errors.full_messages.each do |msg| %>
	       	<li><%= msg %></li>
      	<% end %>
      </ul>
    </div>
  <% end %>

	<h3> Choose your game </h3>
	<p>
		<%= f.label "Mafia Game" %>
		<%= f.radio_button(:code, 0)%>
	</p>
	<p>
		<%= f.label "Title" %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label "Password" %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label "Capacity" %>
		<%= f.number_field(:capacity, in: 6..16) %> <!-- This part need to be ajaxified later to be changed so the range is dependent on the code -->
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

